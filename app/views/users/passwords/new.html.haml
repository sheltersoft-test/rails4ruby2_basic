.page-wrap#wrapper
  .container.login
    .row
      .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
        .formBox
          .page-title
            %h1
              = t('general.forgot_password')
          = form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:id => "forgotPass-form", :class => "form-horizontal", :method => "post"}) do |f|
            .form-group{:class => (resource.errors["email"].any? ? "has-error" : '')}
              %label.col-lg-2.control-label
                = t('recovery.email')
              .col-lg-10
                = f.text_field :email, autofocus: true, placeholder: t('recovery.email'), :class => "form-control", :autofocus => true
                - if resource.errors["email"].any?
                  .errorMsg
                    = resource.errors["email"][0]        
            .form-group
              .col-lg-10.col-lg-offset-2        
                = f.submit t('recovery.recover'), :class => "btn btn-primary btn-lg", :name => "login"
                = link_to t('general.have_an_account'), sign_in_path, :class => "right"
                