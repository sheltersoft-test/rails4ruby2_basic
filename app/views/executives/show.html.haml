.container
  .row
    .col-xs-12#registration-form
      %table.tableForm{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
        %tbody
          %tr
            %td#stepBtnHeight.leftCol{:width => "80%"}
              .formBox.view-details
                .formHeader.clearfix
                  %h1
                    = t("executive.executive_card", :name => @executive.name)
                = render :partial => "open_card", :locals => {:object => @executive}
            %td.stepBtnGroup{:width => "20%"}
              %a.h15.stepBtn.backBtn{:href => executives_path}
                %span
                  =t("form_action_button.return_button")
                = image_tag "back_btn.png", :class => "mt15"
              %a.h15.stepBtn.nextBtn{:href => edit_executive_path(@executive, :step => 1, :open_card => true)}
                %span
                  =t("form_action_button.edit_basic_information")
                = image_tag "save_and_next_btn.png", :class => "mt15"
              %a.h15.stepBtn.nextBtn{:href => edit_executive_path(@executive, :step => 2, :open_card => true)}
                %span
                  =t("form_action_button.edit_job_role_and_skills")
                = image_tag "save_and_next_btn.png", :class => "mt15"
              %a.h15.stepBtn.nextBtn{:href => more_options_settings_path("User",@executive)}
                %span
                  =t("form_action_button.office.card.more_options")
                = image_tag "save_and_next_btn.png", :class => "mt5"              
                
